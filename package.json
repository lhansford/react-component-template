{
  "name": "react-component-template",
  "version": "1.0.0",
  "description": "An opinionated template for React components using Typescript",
  "author": "Luke Hansford",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "rollup --config ./config/rollup.config.js",
    "lint": "node_modules/eslint/bin/eslint.js src --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "yarn lint --fix",
    "start": "rollup --config ./config/rollup.config.js -w",
    "test": "jest --config ./config/jest.config.js",
    "test:watch": "jest --watchAll",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/plugin-transform-async-to-generator": "^7.8.3",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.9.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.7",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "babel-jest": "^26.2.2",
    "eslint": "^6.8.0",
    "eslint-config-fishbrain": "^2.0.0",
    "eslint-plugin-jest-dom": "^3.1.5",
    "eslint-plugin-jest-formatting": "^2.0.0",
    "jest": "^26.2.2",
    "prettier": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.6.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
